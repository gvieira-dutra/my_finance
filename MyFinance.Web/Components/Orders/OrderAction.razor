@inherits OrderActionComponent

@switch (Order.Status)
{
    case EOrderStatus.Paid:
        <MudButton FullWidth="true" Color="Color.Warning" Variant="Variant.Outlined" OnClick=" OnRefundBtnClickedAsync ">
        REQUEST REFUND
    </MudButton>
        break;

    case EOrderStatus.WaitingPayment:
        <MudButton FullWidth="true" Color="Color.Success" Variant="Variant.Filled" Size="Size.Large" class="mb-4" OnClick="OnPayBtnClickedAsync">
            PAY WITH STRIPE
        </MudButton>
        <MudButton FullWidth="true" Color="Color.Error" Variant="Variant.Outlined" OnClick="OnCancelBtnClickedAsync">
            CANCEL ORDER
        </MudButton>
        break;

    default:
        <MudText></MudText>
        break;
}